<p style="color: green"><%= notice %></p>

<h2>Ficha del cliente</h2>
  <div class="shadow-lg p-3 mb-5 bg-gray rounded">
    <% @modo_tabla = false %>
    <%= render @client %>
    <hr>
    <%= link_to "Editar", edit_client_path(@client) %> |
    <%= link_to "Volver", clients_path %> |
    <%= button_to "Eliminar", @client, method: :delete %>
  </div>
  
  <h2>Mascotas asignadas</h2>
  <div class="shadow-lg p-3 mb-5 bg-gray rounded">
    <table class="table table-hover table-dark shadow-lg p-3 mb-5 bg-gray rounded">
      <thead>
        <tr>
          <th>Nombre mascota</th>
          <th>Altura máxima</th>
          <th>Peso máximo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @client.pet.each do |pet| %>
          <tr>
            <td><%= pet.name %></td>
            <td><%= pet.max_weight(pet.id) %></td>
            <td><%= pet.max_height(pet.id) %></td>
            <td><%= link_to 'Ver', pet %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
<hr>


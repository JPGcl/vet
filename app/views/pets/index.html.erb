<p id="notice"><%= notice %></p>

<h1>Mascotas</h1>
<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Raza</th>
      <th>Cumpleaños</th>
      <th>Visitas</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.race %></td>
        <td><%= pet.birthdate %></td>
        <td><%= pet.history_count(pet.id) %></td>
        <td><%= link_to 'Ver', pet %></td>
        <td><%= link_to 'Editar', edit_pet_path(pet) %></td>
        <td><%= link_to 'Eliminar', pet, method: :delete, data: { confirm: "¿Realmente quieres eliminar a la mascota #{pet.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

